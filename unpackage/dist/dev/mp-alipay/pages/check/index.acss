
.content{
	padding:0 15px;
	position: relative;
}
.top-box{
	width: 100%;
	height: 80px;
	background: #FBFBFB;
	border-radius: 5px;
	padding-left: 25px;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.top-box view:first-child{
	padding-top: 15px;
	font-size: 18px;
}
.top-box .shop-name{
	color:#828282;
	line-height: 30px!important;
}
.shop-icon{
	position: absolute;
	right: 35px;
	top:15px;
}
.shop-icon ._img{
	width:50px;
	height: 50px;
	border-radius: 5px;
}

