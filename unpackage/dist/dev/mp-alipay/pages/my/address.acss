
.footer-bar{
	width: 100%;
	height: 60px;
	border-top: 1px solid #ccc;
	position: fixed;
	bottom: 0;
	left: 0;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.footer-bar view{
	-webkit-box-flex: 6;
	-webkit-flex: 6;
	    -ms-flex: 6;
	        flex: 6;
	line-height: 60px!important;
	text-align: center;
}
.footer-bar view:first-child{
	border-right: 1px solid #ccc;
}

