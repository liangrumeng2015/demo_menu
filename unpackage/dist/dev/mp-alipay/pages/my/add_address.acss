
.content{
	margin:0 10px;
	margin-top:10px;
}
.item-box{
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	margin-bottom: 1px;
}
.address-box{
	margin-top:20px;
}
.item-box .title{
	width: 100%;
	display: block;
	background: #fff;
	padding-left: 10px;
	line-height: 40px;
	-webkit-box-flex: 3;
	-webkit-flex: 3;
	    -ms-flex: 3;
	        flex: 3;
}
.item-box .title-input{
	-webkit-box-flex: 9;
	-webkit-flex: 9;
	    -ms-flex: 9;
	        flex: 9;
	height: 40px;
	line-height: 40px;
	background: #fff;
	text-indent: 4px;
}
.item-box .title-input ._input{
	height: 40px;
}
.item-box .select-part{
	position: relative;
}
.select-part .icon-next{
	position: absolute;
	right: 10px;
	top:12px;
	z-index: 5;
}
.select-part .icon-next ._img{
	width: 16px;
	height: 16px;
}
.select-part .icon-box{
	position: absolute;
	right: 0;
	top:8px;
	right: 10px;
	z-index: 20;
	text-indent: 0;
}
.btn{
	width: 100%;
	height: 45px;
	
	border-radius: 8px;
	text-align: center;
	line-height: 45px!important;
	color:#fff;
	margin-top: 20px;
}
.btn-save{
	background: #33AAFF;
	margin-top: 50px;
}
.wx-address{
	border:1px solid #33AAFF;
	color: #33AAFF;
}

